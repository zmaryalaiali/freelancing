<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                android:elevation="12dp"
                android:padding="8dp"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_seller_home_titleAbove"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:text="Here's how you're doing"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linear_seller_home_sellerLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_seller_home_titleAbove"
                        android:layout_marginStart="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Seller level"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Next evaluation"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Response time"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_seller_home_titleAbove"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_seller_home_sellerLevelType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="new seller"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_seller_home_nextEvaluation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="feb 15 , 2021"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_seller_home_responseTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="44 hours"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear_seller_home_sellerLevel">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/progress_seller_home_responseRate"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/progress_seller_home_background"
                                android:max="100"
                                android:progress="80"
                                android:progressDrawable="@drawable/progress_seller_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_seller_home_responseRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80%"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/progress_seller_home_responseRate"
                                app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_responseRate"
                                app:layout_constraintStart_toStartOf="@+id/progress_seller_home_responseRate"
                                app:layout_constraintTop_toTopOf="@+id/progress_seller_home_responseRate" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_responseRate"
                                app:layout_constraintStart_toStartOf="@+id/progress_seller_home_responseRate"
                                app:layout_constraintTop_toBottomOf="@+id/progress_seller_home_responseRate">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/linear_seller_home_sellerLevel"
                                    android:text="Response"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/linear_seller_home_sellerLevel"
                                    android:text="rate"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintStart_toStartOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintTop_toBottomOf="@+id/progress_seller_home_responseRate" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/progress_seller_home_orderCompletion"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/progress_seller_home_background"
                                android:max="100"
                                android:progress="100"
                                android:progressDrawable="@drawable/progress_seller_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/progress_seller_home_orderCompletion"
                                app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_orderCompletion"
                                app:layout_constraintStart_toStartOf="@+id/progress_seller_home_orderCompletion"
                                app:layout_constraintTop_toTopOf="@+id/progress_seller_home_orderCompletion" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_orderCompletion"
                                app:layout_constraintStart_toStartOf="@+id/progress_seller_home_orderCompletion"
                                app:layout_constraintTop_toBottomOf="@+id/progress_seller_home_orderCompletion">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/linear_seller_home_sellerLevel"
                                    android:text="Order"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/linear_seller_home_sellerLevel"
                                    android:text="completion"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintStart_toStartOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintTop_toBottomOf="@+id/progress_seller_home_responseRate" />
                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/progress_seller_home_onTimeDeliver"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/progress_seller_home_background"
                                android:max="100"
                                android:progress="80"
                                android:progressDrawable="@drawable/progress_seller_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80%"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/progress_seller_home_onTimeDeliver"
                                app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_onTimeDeliver"
                                app:layout_constraintStart_toStartOf="@+id/progress_seller_home_onTimeDeliver"
                                app:layout_constraintTop_toTopOf="@+id/progress_seller_home_onTimeDeliver" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_onTimeDeliver"
                                app:layout_constraintStart_toStartOf="@+id/progress_seller_home_onTimeDeliver"
                                app:layout_constraintTop_toBottomOf="@+id/progress_seller_home_onTimeDeliver">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="On-time"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="delivery"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintStart_toStartOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintTop_toBottomOf="@+id/progress_seller_home_responseRate" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/progress_seller_home_positiveRating"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/progress_seller_home_background"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progress_seller_home"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="N/A"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/progress_seller_home_positiveRating"
                                app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_positiveRating"
                                app:layout_constraintStart_toStartOf="@+id/progress_seller_home_positiveRating"
                                app:layout_constraintTop_toTopOf="@+id/progress_seller_home_positiveRating" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_positiveRating"
                                app:layout_constraintStart_toStartOf="@+id/progress_seller_home_positiveRating"
                                app:layout_constraintTop_toBottomOf="@+id/progress_seller_home_positiveRating">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Positive"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="rating"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintEnd_toEndOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintStart_toStartOf="@+id/progress_seller_home_responseRate"
                                    app:layout_constraintTop_toBottomOf="@+id/progress_seller_home_responseRate" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/black" />


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Earnings"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_seller_home_earningClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Details"
                    android:textColor="@color/primary_main" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available for withdrawal" />

                        <TextView
                            android:id="@+id/tv_seller_home_available"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textColor="@color/primary_main" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg selling price" />

                        <TextView
                            android:id="@+id/tv_seller_home_avgPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textColor="@color/primary_main" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment being cleared" />

                        <TextView
                            android:id="@+id/tv_seller_home_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textColor="@color/primary_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Earnings in May" />

                        <TextView
                            android:id="@+id/tv_seller_home_earningIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textColor="@color/black" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active orders" />

                        <TextView
                            android:id="@+id/tv_seller_home_activeOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textColor="@color/black" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Canceled orders" />

                        <TextView
                            android:id="@+id/tv_seller_home_cancelOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>