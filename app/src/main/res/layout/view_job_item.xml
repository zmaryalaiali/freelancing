<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="4dp"
    android:elevation="12dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/JobpostedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted Time"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/JobpostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:text="I want to find someone to help me complete the application..."
        android:layout_below="@+id/JobpostedTime"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/Jobpostprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Fixed-price-intermediate-Est-Budget:$100"
        android:layout_below="@+id/JobpostName"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/JobpostDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:maxLines="2"
        android:text="I want to find someone to help me complete the application for whatsapp business API..."
        android:layout_below="@+id/Jobpostprice"
        android:layout_marginStart="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/JobpostVerifacation"
        android:layout_height="wrap_content"
        android:layout_marginTop="18sp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/JobpostDescription">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/send"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment verified"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_jobpostProposal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proposals:"
        android:layout_marginTop="18sp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/JobpostVerifacation"/>
    <TextView
        android:id="@+id/jobpostProposals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12+"
        android:layout_toEndOf="@id/tv_jobpostProposal"
        android:layout_marginTop="18sp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/JobpostVerifacation"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/jobpostProposals"
        android:layout_marginBottom="3dp"/>







</RelativeLayout>