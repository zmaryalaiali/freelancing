<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_height="130dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:id="@+id/cv_gig"
        android:layout_margin="3dp"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/RL_image_of_gig"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_gig"
                android:layout_width="140dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:src="@drawable/busone" />

            <ImageView
                android:id="@+id/iv_stars"
                android:layout_width="24dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@id/iv_gig"
                android:layout_height="24dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/tv_Review_rate"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/iv_stars"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:text="(4.9)" />

<!--            <TextView-->
<!--                android:id="@+id/tv_review"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="(100)"-->
<!--                android:layout_toEndOf="@id/tv_Review_rate"-->
<!--                android:layout_marginTop="15dp"-->
<!--                android:layout_marginLeft="6dp"-->
<!--                />-->

            <ImageView
                android:id="@+id/iv_gig_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/favourite" />

            <TextView
                android:id="@+id/tv_gig_description"
                android:layout_width="wrap_content"
                android:layout_below="@id/iv_stars"
                android:layout_marginTop="12dp"
                android:paddingLeft="12dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_gig"
                android:textSize="18sp"
                android:text="create, edit,redesign minimalist bussnise ..."
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="9dp"
                    android:text="Price" />

                <TextView
                    android:id="@+id/tv_gig_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19$"
                    android:textSize="20sp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>